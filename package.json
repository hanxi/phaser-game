{
  "name": "my-phaser-game",
  "version": "1.0.0",
  "description": "A Phaser 3 Hello World game using Bun and TypeScript",
  "main": "dist/main.js",
  "scripts": {
    "build": "bun build src/main.ts --outdir dist --target browser",
    "dev": "bun --watch build src/main.ts --outdir dist --target browser",
    "serve": "bunx serve . -p 3000"
  },
  "keywords": ["phaser", "game", "typescript", "bun"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "phaser": "^3.70.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  }
}